{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -H 0.0.0.0 -p 3000",
    "build": "next build",
    "start": "next start -H 0.0.0.0 -p 3000",
    "lint": "next lint",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:seed": "prisma db seed",
    "check:env": "dotenv -e .env -- node -e \"console.log('环境检查开始...\\n','当前环境:', process.env.NODE_ENV, '\\n数据库连接:', !!process.env.MYSQL_URL, '\\n端口:', process.env.PORT || 8080)\"",
    "check:db": "dotenv -e .env -- node scripts/check-deploy.js",
    "seed": "npm run prisma:seed:dev",
    "seed:basic": "dotenv -e .env -- node data/seed.js",
    "seed:all": "dotenv -e .env -- node data/seed-all.js",
    "seed:units": "dotenv -e .env -- node data/seed-units.js",
    "seed:tags": "dotenv -e .env -- node data/seed-tags.js",
    "seed:bookmarks": "dotenv -e .env -- node data/seed-bookmarks.js",
    "seed:posts": "dotenv -e .env -- node data/seed-posts.js",
    "seed:recipes": "dotenv -e .env -- node data/seed-recipes.js",
    "db:export": "dotenv -e .env -- node data/convert-backup.js",
    "init:db": "npm run prisma:generate && npm run prisma:push && npm run seed:basic && npm run seed:all",
    "prisma:push:dev": "dotenv -e .env -- prisma db push",
    "prisma:seed:dev": "dotenv -e .env -- prisma db seed",
    "fix:backup": "python3 scripts/fix_mysql_backup.py",
    "db:import": "npm run fix:backup && mysql -u root -p blog_demo < blog_demo_backup_fixed.sql",
    "db:import:full": "bash scripts/import_db.sh"
  },
  "dependencies": {
    "@prisma/client": "^6.0.1",
    "bcryptjs": "^2.4.3",
    "chinese-to-pinyin": "^1.3.1",
    "dotenv": "^16.4.7",
    "draft-js": "^0.11.7",
    "fs": "^0.0.1-security",
    "mysql2": "^3.11.5",
    "next": "15.0.4",
    "next-themes": "^0.4.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.4.0",
    "react-markdown": "^9.0.1",
    "react-markdown-editor-lite": "^1.3.4",
    "react-syntax-highlighter": "^15.6.1",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.0",
    "slugify": "^1.6.6",
    "uuid": "^11.0.3",
    "yup": "^1.5.0"
  },
  "devDependencies": {
    "@types/node": "22.10.1",
    "@types/react": "19.0.1",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8",
    "eslint-config-next": "15.0.4",
    "postcss": "^8",
    "prisma": "^6.0.1",
    "tailwindcss": "^3.4.1"
  },
  "prisma": {
    "seed": "dotenv -e .env.local -- node data/seed.js && dotenv -e .env.local -- node data/seed-all.js"
  }
}
